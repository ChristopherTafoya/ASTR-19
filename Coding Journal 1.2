def main():
    # Sum of two floating point numbers
    float1 = 5.7
    float2 = 3.3
    sum_result = float1 + float2
    print("Sum:", sum_result)
    print("Type of sum:", type(sum_result))

    # Difference between two integers
    int1 = 10
    int2 = 4
    diff_result = int1 - int2
    print("\nDifference:", diff_result)
    print("Type of difference:", type(diff_result))

    # Product of a floating point number and an integer
    float_num = 2.5
    int_num = 6
    prod_result = float_num * int_num
    print("\nProduct:", prod_result)
    print("Type of product:", type(prod_result))


# This makes sure the program runs when you start it
if __name__ == "__main__":
    main()
